# Database (Use Neon, Supabase, or PlanetScale for production)
DATABASE_URL="postgresql://username:password@localhost:5432/newsletter_db"
DIRECT_URL="postgresql://username:password@localhost:5432/newsletter_db"

# Authentication (BetterAuth)
BETTER_AUTH_SECRET="your-better-auth-secret-key-min-32-characters"
BETTER_AUTH_URL="http://localhost:3000"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
