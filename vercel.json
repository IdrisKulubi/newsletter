{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/**/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/analytics",
      "schedule": "0 */6 * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "@next_public_app_url"
  },
  "regions": ["iad1"],
  "redirects": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}