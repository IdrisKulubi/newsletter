# Staging Environment Variables Template
# Copy this file to .env.staging.local and fill in actual values

# Application
NODE_ENV=staging
APP_URL=https://staging.your-domain.com
PORT=3000

# Database
DATABASE_URL=postgresql://username:password@postgres:5432/newsletter_staging
DATABASE_POOL_SIZE=10
DATABASE_SSL=true

# Authentication
BETTER_AUTH_SECRET=your-staging-secret-key-minimum-32-chars
BETTER_AUTH_URL=https://staging.your-domain.com

# OAuth Providers (use test credentials)
GOOGLE_CLIENT_ID=your-staging-google-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
MICROSOFT_CLIENT_ID=your-staging-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-staging-microsoft-client-secret

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your-staging-r2-access-key
R2_SECRET_ACCESS_KEY=your-staging-r2-secret-key
R2_ACCOUNT_ID=your-staging-r2-account-id
R2_BUCKET_NAME=newsletter-assets-staging
R2_PUBLIC_URL=https://your-staging-bucket.your-account.r2.cloudflarestorage.com

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# Email Service (use test mode)
RESEND_API_KEY=your-staging-resend-api-key

# AI Service
OPENAI_API_KEY=your-staging-openai-api-key

# Monitoring
LOG_LEVEL=debug
ENABLE_METRICS=true

# Security
CSRF_SECRET=your-staging-csrf-secret-key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Performance
CACHE_TTL=300
MAX_UPLOAD_SIZE=5242880